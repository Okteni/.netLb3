@model Order

<h1>Create a New Order</h1>
<form asp-action="Create" method="post">
    <div>
        <label asp-for="CustomerId">Customer:</label>
        <select asp-for="CustomerId" asp-items="@ViewBag.Customers"></select>
    </div>
    <div>
        <label asp-for="BookId">Book:</label>
        <select asp-for="BookId" asp-items="@ViewBag.Books"></select>
    </div>

    <label asp-for="Date">Date:</label>
    <input asp-for="Date" required />
    <span asp-validation-for="Date"></span>

    <label asp-for="Status">Status:</label>
    <input asp-for="Status" required />
    <span asp-validation-for="Status"></span>

    <label asp-for="Price">Price:</label>
    <input asp-for="Price" type="number" step="0.01" required />
    <span asp-validation-for="Price"></span>

    <label asp-for="TotalAmount">TotalAmount:</label>
    <input asp-for="TotalAmount" type="number" step="0.01" required />
    <span asp-validation-for="TotalAmount"></span>
    
    <div>
        <input type="submit" value="Create" />
    </div>
</form>
