@model List<Order>

<h1>Order List</h1>
<table>
    <thead>
        <tr>
           
            <th>Customer</th>
            <th>Book</th>
            <th>Date</th>
            <th>Status</th>
            <th>Total Amount</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                
                <td>@order.CustomerId</td>
                <td>@order.BookId</td>
                <td>@order.Date</td>
                <td>@order.Status</td>
                <td>@order.TotalAmount</td>
                <td>@order.Price</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@order.OrderId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@order.OrderId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

