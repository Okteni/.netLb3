@model Book

<h1>Edit Book</h1>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="BookId" />
    <div>
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" />
        <span asp-validation-for="Title"></span>

        <label asp-for="Author">Author:</label>
        <input asp-for="Author" />
        <span asp-validation-for="Author"></span>

        <label asp-for="Genre">Genre:</label>
        <input asp-for="Genre" />
        <span asp-validation-for="Genre"></span>

        <label asp-for="Year">Year:</label>
        <input asp-for="Year" type="number" />
        <span asp-validation-for="Year"></span>

        <label asp-for="Publisher">Publisher:</label>
        <input asp-for="Publisher" />
        <span asp-validation-for="Publisher"></span>

        <label asp-for="Price">Price:</label>
        <input asp-for="Price" type="number" step="0.01"  />
        <span asp-validation-for="Price"></span>
    </div>
    
    <div>
        <input type="submit" value="Save Changes" />
    </div>
</form>