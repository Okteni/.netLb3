@model Book

<h1>Create a New Book</h1>
<form asp-action="Create" method="post">
   

    <label asp-for="Title">Title:</label>
    <input asp-for="Title" required />
    <span asp-validation-for="Title"></span>

    <label asp-for="Author">Author:</label>
    <input asp-for="Author" required />
    <span asp-validation-for="Author"></span>

    <label asp-for="Genre">Genre:</label>
    <input asp-for="Genre" required />
    <span asp-validation-for="Genre"></span>

    <label asp-for="Year">Year:</label>
    <input asp-for="Year" type="number" required />
    <span asp-validation-for="Year"></span>

    <label asp-for="Publisher">Publisher:</label>
    <input asp-for="Publisher" required />
    <span asp-validation-for="Publisher"></span>

    <label asp-for="Price">Price:</label>
    <input asp-for="Price" type="number" step="0.01" required />
    <span asp-validation-for="Price"></span>

    <button type="submit">Add Book</button>

</form>